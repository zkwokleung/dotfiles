# * System
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Cat to Bat
if command -v bat &>/dev/null; then
    alias cat=bat
fi

# Check if eza is installed
if command -v eza &>/dev/null; then
    alias ls='eza --icons --color=always --group-directories-first'
    alias ll='eza -alF --icons --color=always --group-directories-first'
    alias la='eza -a --icons --color=always --group-directories-first'
    alias l='eza -F --icons --color=always --group-directories-first'
    alias l.='eza -a | egrep "^\."'
    alias ldir='eza -d */ --icons --color=always --group-directories-first'
else
    # Detect which `ls` flavor is in use
    if ls --color >/dev/null 2>&1; then # GNU `ls`
        colorflag="--color"
        export LS_COLORS='no=00:fi=00:di=01;31:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'
    else # macOS `ls`
        # Check if the vivid command is installed
        if command -v vivid &>/dev/null; then
            export LS_COLORS='$(vivid generate one-dark)'
        else
            colorflag="-G"
            export LS_COLORS='BxBxhxDxfxhxhxhxhxcxcx'
        fi
    fi

    # List all files colorized in long format
    alias l="ls -lF ${colorflag}"
    alias ls="ls ${colorflag}"

    # List all files colorized in long format, excluding . and ..
    alias la="ls -lAF ${colorflag}"

    # List only directories
    alias ldir="ls -lF ${colorflag} | grep --color=never '^d'"
fi

# Misc
alias rl="source ~/.zshrc"
alias cls=clear
# Platform-specific clipboard aliases
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias clip="tr -d '\n' | pbcopy"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # Try different clipboard tools for Linux
    if command -v xclip &>/dev/null; then
        alias clip="tr -d '\n' | xclip -selection clipboard"
    elif command -v wl-copy &>/dev/null; then
        alias clip="tr -d '\n' | wl-copy"
    elif command -v xsel &>/dev/null; then
        alias clip="tr -d '\n' | xsel --clipboard --input"
    else
        alias clip="echo 'No clipboard tool available. Install xclip, wl-clipboard, or xsel.'"
    fi
fi
