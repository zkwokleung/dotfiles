# ðŸŽ¯ EditorConfig for Dotfiles
# Consistent coding styles across editors and IDEs
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Shell scripts and dotfiles
[{*.sh,*.bash,*.zsh,.aliases,.functions,.exports,.extra,.path,.bash_prompt,.bashrc,.bash_profile,.zshrc,.zprofile,.inputrc}]
indent_size = 2

# Tmux configuration
[{*.tmux,.tmux.conf*,tmux.conf*}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files (Starship config)
[*.toml]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# Git configuration
[.gitconfig*]
indent_size = 2

# Makefile (requires tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab

# Python files
[*.py]
indent_size = 4

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# XML
[*.xml]
indent_size = 2 